<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	
	
	
	<include file="struts_resources.xml"></include>
	<include file="struts_js.xml"></include>
	<include file="commun/struts_commun.xml"></include>
	<include file="potager/struts_potager.xml"></include>
	
	<package name="default" namespace="" extends="struts-default">
	    
	    <interceptors>
            <interceptor name="authentication"
                class="commun.interceptors.AuthentificationInterceptor"></interceptor>
            <interceptor-stack name="authStack">
                <interceptor-ref name="authentification"></interceptor-ref>
                <interceptor-ref name="defaultStack"></interceptor-ref>
            </interceptor-stack>
        </interceptors>
 
        <default-interceptor-ref name="authStack"></default-interceptor-ref>
	    
		<default-action-ref name="todo" />
		
		<global-results>
    		<result name="login" type="redirect">/login.action</result>
		</global-results>
		
		
		<action name="login">
		    <result>/WEB-INF/commun/html/connexion.jsp</result>
		    
	    </action>
		
		<action name="todo">
			<result>/WEB-INF/potager/test.jsp</result>
		</action>

	</package>

</struts>